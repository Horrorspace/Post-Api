{
  "name": "posts-api",
  "version": "1.0.0",
  "description": "REST API for Post application",
  "main": "app.ts",
  "scripts": {
    "test": "jest",
    "ts": "tsc --watch --resolveJsonModule",
    "serve": "nodemon ./build/src/app.js",
    "start": "node ./build/src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Horrorspace/Post-Api.git"
  },
  "keywords": [
    "ts",
    "typescript",
    "express",
    "nodejs"
  ],
  "author": {
    "name": "eugenii",
    "email": "utkineugeniy@gmail.com"
  },
  "license": "CC BY-NC 3.0",
  "bugs": {
    "url": "https://github.com/Horrorspace/Post-Api/issues"
  },
  "homepage": "https://github.com/Horrorspace/Post-Api#readme",
  "eslintConfig": {
    "plugins": [
      "import"
    ],
    "rules": {
      "import/no-unresolved": "error"
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true,
          "project": "path/to/folder"
        }
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "core-js": "^3.14.0",
    "cross-env": "^7.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "babel-core": "^7.0.0-bridge.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.13.7"
  }
}
